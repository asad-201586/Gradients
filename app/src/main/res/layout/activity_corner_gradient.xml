<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CornerGradient">

    <LinearLayout

        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/corner_gradient_01"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"/>

        <LinearLayout
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/corner_gradient_02"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"/>

    </LinearLayout>

    <LinearLayout

        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/corner_gradient_03"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"/>

        <LinearLayout
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/corner_gradient_04"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"/>

    </LinearLayout>

</LinearLayout>